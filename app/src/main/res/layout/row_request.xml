<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/clouds">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            fontPath="fonts/Ubuntu-Regular.ttf"
            android:id="@+id/tv_row_request_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_marginStart="5dp"
            android:layout_gravity=""
            android:text="Paketinizi götürmek isteyen biri var!"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="MissingPrefix"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/capacity_rounded_bg">

            <ImageView
                android:id="@+id/iv_row_request_info_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/passenger_with_baggage"
                android:tint="@color/white"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>